# Use this file to generate helpful cscope and tags files.
#
# This file is purposefully independent from the main build system so as to
# make it portable to other projects.

all: cscope.out tags

clean: 
	rm -f cscope.* tags

cscope.files:
	find $$(readlink -f ../) -name '*.[ch]' -o -name '*.[cp][cp]'-o -name '*.[ch]pp' > $@

cscope.out: cscope.files
	cscope -b -q -i cscope.files

tags: cscope.files
	ctags -L cscope.files -f $@

